  <script>
    const filtro = ["tonto", "estúpido", "idiota", "odio", "matar", "grosero"];
    function publicar() {
      const input = document.getElementById("mensaje");
      let texto = input.value.trim();
      if (!texto) return;
      filtro.forEach(p => {
        const regex = new RegExp(p, "gi");
        texto = texto.replace(regex, "****");
      });
      const div = document.createElement("div");
      div.className = "foro-mensaje";
      div.textContent = texto;
      document.getElementById("foro-mensajes").appendChild(div);
      input.value = "";
    }
  </script>

